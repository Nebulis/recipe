{
  "name": "recipe",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "downshift": "^5.0.4",
    "firebase": "10.7.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2"
  },
  "scripts": {
    "start": "npm-run-all -p css:watch js:start",
    "build": "npm run css:build && npm run js:build && cp ./_redirects ./build/",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "css:build": "postcss src/styles/tailwind.css -o src/index.css",
    "css:watch": "postcss src/styles/tailwind.css -o src/index.css -w",
    "js:start": "NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "js:build": "NODE_OPTIONS=--openssl-legacy-provider react-scripts build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.3",
    "autoprefixer": "^9.7.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "react-scripts": "3.4.0",
    "tailwindcss": "^1.2.0",
    "typescript": "~3.7.2"
  },
  "prettier": {
    "printWidth": 120
  }
}
